@model _420_476_ProjetFinal_Desrosiers_Pucacco_Lam.Request

@{
    ViewBag.Title = "Create";
}

<h2>Création de demande</h2>

@using (Html.BeginForm("Create", "Requests", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Requete</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table>
            <tr>
                <td>
                    @Html.Label("Titre: ")
                </td>
                <td>
                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", placeholder = "titre de la demande", required = "required" } })
                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.Label("Description: ")</td>
                <td>
                    @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control", placeholder = "Description", required = "required" } })
                    @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.Label("Image: ")</td>
                <td>
                    <input id="ChoosedFile" type="file" name="ChoosedFile" accept="image/*" />
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(model => model.image, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>@Html.Label("Catégorie: ")</td>
                <td>
                    @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                </td>
            </tr>
            
            <tr>
                <td><input type="submit" style="background-color: orange; border: 1px solid black;" value="Create" class="btn btn-default" /></td>
                <td><a class="btn btn-default" style="background-color: orange; border: 1px solid black;" href="@Url.Action("MyOffersAndRequests", "Account")">Retour</a></td>
            </tr>
        </table>
    </div>
}